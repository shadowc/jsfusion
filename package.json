{
    "name": "jsfusion",
    "version": "0.1-alpha",
    "license": "MIT",
    "description": "A JavaScript ProtoFramework inspired on StimulusJS",
    "author": {
        "name": "Matias Jos√©",
        "email": "info@matiasjose.com",
        "url": "https://github.com/shadowc/jsfusion"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shadowc/jsfusion.git"
    },
    "bugs": {
        "url": "https://github.com/shadowc/jsfusion/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "module": "dist/runtime.js",
    "main": "dist/runtime.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/runtime.js",
        "dist/runtime.dev.js",
        "dist/types/**/*"
    ],
    "scripts": {
        "clean": "rm -fr dist",
        "types": "tsc --noEmit false --declaration true --emitDeclarationOnly true --outDir dist/types",
        "prerelease": "npm run build && npm run build-dev && git --no-pager diff && echo && npm pack --dry-run",
        "release": "npm publish",
        "test": "APP_ENV=development ./node_modules/.bin/jest",
        "build": "APP_ENV=production ./node_modules/.bin/webpack",
        "build-dev": "APP_ENV=development ./node_modules/.bin/webpack",
        "build-watch": "APP_ENV=development ./node_modules/.bin/webpack --watch"
    },
    "devDependencies": {
        "jest": "^27.5.1",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.5",
        "webpack": "^5.68.0",
        "webpack-cli": "^4.9.2"
    }
}
